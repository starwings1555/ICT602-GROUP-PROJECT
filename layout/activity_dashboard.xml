<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7CCDB"
    tools:context=".service.dashboard">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_restAppBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAPPERS"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_addAppointment"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:backgroundTint="#2A324B"
            android:text="New Appointment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_viewAppointment"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/btn_addAppointment"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2A324B"
            android:text="View Appointment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/btn_viewAppointment"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2A324B"
            android:text="Location"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_aboutUs"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/btn_location"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2A324B"
            android:text="About Us"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#737897"
            android:text="Log out" />

    </LinearLayout>

</RelativeLayout>